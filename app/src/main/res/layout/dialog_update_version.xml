<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:id="@+id/root"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boxPlane"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_37"
        android:layout_marginEnd="@dimen/dp_37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/white"
            android:translationY="@dimen/dp_20"
            app:layout_constraintBottom_toTopOf="@+id/itembg" />

        <View
            android:id="@+id/itembg"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="0dp"
            android:background="@drawable/shape_round_rect_bg_by_white"
            app:layout_constraintTop_toBottomOf="@+id/topImage"
            app:layout_constraintBottom_toBottomOf="@+id/lineview" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/topImage"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:src="@drawable/app_update_version_top_icon"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgCloseButton"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:padding="@dimen/dp_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_55"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/uk_close_update"
            android:visibility="gone"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            tools:text="- New Version -"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/c_0D1324"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/topImage" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            tools:text="V1.1.32"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_8F9BAF"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_7"
            app:layout_constraintTop_toBottomOf="@+id/title" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/contentRecyclerView"
            app:layout_constraintTop_toBottomOf="@+id/subtitle"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingVertical="@dimen/dp_10"
            android:paddingHorizontal="@dimen/dp_35"
            android:overScrollMode="never"
            android:layout_height="@dimen/dp_155" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/confirmBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_marginHorizontal="@dimen/dp_35"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/contentRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="更新"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:background="@drawable/shape_rect_bg_theme_blue_radius_25" />

        <View
            android:id="@+id/lineview"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/confirmBtn"
            android:layout_marginTop="@dimen/dp_20" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>