<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetalisActivity"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/ic_login_page_top_bg"
        app:layout_constraintDimensionRatio="w,1:1.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/uk_back"
            android:padding="@dimen/dp_6"
            android:scaleType="center"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/c_0D1324"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            tools:text="2012"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <cn.jzvd.JzvdStd
        android:id="@+id/jz_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        app:layout_constraintTop_toBottomOf="@id/layoutTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/jz_video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvVideoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dp_12"
                android:textColor="@color/c_0D1324"
                android:textStyle="bold"
                android:textSize="@dimen/sp_18"
                android:layout_marginStart="@dimen/dp_16"
                android:includeFontPadding="false"
                tools:text="2012"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvVideoCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvVideoName"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/c_8F9BAF"
                android:textSize="@dimen/sp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:includeFontPadding="false"
                tools:text="2012"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvVideoNumTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvVideoCode"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dp_18"
                android:textColor="@color/c_0D1324"
                android:textStyle="bold"
                android:textSize="@dimen/sp_18"
                android:layout_marginStart="@dimen/dp_16"
                android:includeFontPadding="false"
                android:text="选集"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listVideo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvVideoNumTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_6"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvVideoTipsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/listVideo"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dp_18"
                android:textColor="@color/c_0D1324"
                android:textStyle="bold"
                android:textSize="@dimen/sp_18"
                android:layout_marginStart="@dimen/dp_16"
                android:includeFontPadding="false"
                android:text="简介"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvVideoTips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvVideoTipsTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/c_8F9BAF"
                android:textSize="@dimen/sp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:includeFontPadding="false"
                tools:text="2012"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>