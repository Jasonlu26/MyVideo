<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyVideo"
        parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="colorPrimary">@color/c_theme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- default tint color -->
        <item name="colorOnSurface">@color/c_8F9BAF</item>
        <!-- default text color -->
        <item name="android:textColor">@color/c_0D1324</item>
        <!-- default menu text color -->
        <item name="android:actionMenuTextColor">@color/c_theme</item>

        <item name="android:textAllCaps">false</item>
    </style>


    <style name="RoundedStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_8</item>
    </style>

    <style name="CircleStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_40</item>
    </style>

    <style name="SplashActivityTheme"
        parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- 隐藏状态栏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 隐藏标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@mipmap/ic_launcher</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>